<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <com.demo.jcguan.sprogressbar.HorizantalProgressbar
        android:id="@+id/progress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:progress="0"
        app:progress_reached_color="#0067FE"
        app:progress_text_color="#953"
        app:progress_unreach_color="#FF5500"/>
    <com.demo.jcguan.sprogressbar.HorizantalProgressbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:progress="100"
        app:progress_reached_color="#ff00ff00"
        app:progress_text_color="#953"
        app:progress_unreach_color="#FFFF0000"/>
    <com.demo.jcguan.sprogressbar.RoundProgressbar
        android:id="@+id/progress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:progress="0"
        app:progress_reach_heigjt="5dp"
        app:radius="50dp"
        app:progress_reached_color="#0067FE"
        app:progress_text_color="#953"
        app:progress_unreach_color="#FF5500"/>
</LinearLayout>
